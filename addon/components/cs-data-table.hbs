<div class="cs-data-table">
  {{#if this.isToolbarEnabled}}
    <div class="cs-data-table-toolbar">
      {{#if this.isSearchEnabled}}
        <CsDataTable::-Toolbar::-Searchbar
          @columns={{this.searchableColumns}}
          @debounce={{@searchDebounce}}
          @value={{this.searchText}}
          @onSearch={{fn (mut this.searchText)}}
        />
      {{/if}}
    </div>
  {{/if}}
  <table>
    <thead>
    <tr>
      {{#each @columns as |column|}}
        <th>{{column.label}}</th>
      {{/each}}
    </tr>
    </thead>
    <tbody>
    {{#if (is-empty @data)}}
      {{yield (hash empty=(component "cs-data-table/-empty" nbCols=@columns.length))}}
    {{else if (is-empty this.data)}}
      {{yield (hash noResult=(component "cs-data-table/-empty" nbCols=@columns.length))}}
    {{else}}
      {{#each this.data as |item|}}
        {{yield (hash row=(component "cs-data-table/-row" item=item))}}
      {{/each}}
    {{/if}}
    </tbody>
  </table>
</div>